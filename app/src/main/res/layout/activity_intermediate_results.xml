<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableIntermediateActivity" >

    <com.densvr.table.TableFixHeaders
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/inter_results_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerHorizontal ="true"
        android:layout_centerVertical ="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Сохранить" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Отменить" />

    <CheckBox
        android:id="@+id/checkBox_overwrite_attempt"
        style="?android:attr/checkBoxPreferenceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Перезаписать"
        android:layout_alignBottom="@+id/CheckBox_reestablish" />

    <CheckBox
        android:id="@+id/CheckBox_reestablish"
        style="?android:attr/checkBoxPreferenceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Восстановить"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>