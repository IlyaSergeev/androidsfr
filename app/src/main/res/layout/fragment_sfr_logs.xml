<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.densvr.ui.activities.NavigationDrawableActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sfr_logs_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="SFR logs"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sfr_logs_last_format_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Last format date: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sfr_logs_person_number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Person number: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sfr_logs_points_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Points count: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sfr_logs_start_point_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Start point ID: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sfr_logs_chip_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Chip type: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sfr_logs_points_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Points: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sfr_logs_points_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.\n2.\n3."
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/sfr_logs_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Test logs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
